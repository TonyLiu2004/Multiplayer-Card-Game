{
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:jest/recommended",
        "prettier"
    ],
    "plugins": ["jest", "import"],
    "rules": {
        "no-console": 1,
        "jest/no-disabled-tests": "warn",
        "jest/no-focused-tests": "error",
        "jest/no-identical-title": "error",
        "jest/prefer-to-have-length": "warn",
        "jest/valid-expect": "error"
    },
    "parserOptions": {
        "ecmaVersion": 2019,
        "sourceType": "module",
        "ecmaFeatures": {}
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jest/globals": true,
        "jest": true
    },
    "settings": {
        "import/core-modules": ["phaser"]
    },
    "globals": {
        "Phaser": true
    }
}
