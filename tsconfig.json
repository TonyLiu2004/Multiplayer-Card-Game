{
    "compilerOptions": {
      "sourceMap": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "allowSyntheticDefaultImports": true,
      "allowUnreachableCode": false,
      "noImplicitAny": false,
      "esModuleInterop": true,
      "module": "commonjs",
      "target": "es5",
      "allowJs": true,
      "moduleResolution": "node",
      "lib": ["dom", "es5", "esnext"],
      "skipLibCheck": true,
      "importHelpers": true,
      "baseUrl": "./src",
      "paths": {
        "~/*": ["./*"]
      },
      "typeRoots": [
        "@types",
        "node_modules/@types",
        "node_module/phaser/types"
      ],
      "types": [
        "Phaser"
      ]
    },
    "exclude": ["node_modules", "pwa", "webpack"],
    "include": [
      "src/**/*"
    ]
    
}